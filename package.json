{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "debug": "npm run clean && npm run tsoa && tsc && concurrently \"npm:build:dev\" \"npm:start:debug\" \"npm:tsoa:dev\"",
    "dev": "npm run clean && npm run tsoa && tsc && concurrently \"npm:build:dev\" \"npm:start:dev\" \"npm:tsoa:dev\"",
    "start:dev": "nodemon dist/index.js",
    "start:debug": "nodemon --inspect dist/index.js",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "tsoa:dev": "chokidar \"src/controllers/**/*.ts\" \"src/models/**/*.ts\" -c \"tsoa routes && tsoa spec\"",
    "tsoa": "tsoa routes && tsoa spec",
    "build": "npm run clean && npm run build-server && npm run build-client",
    "clean": "rimraf \"dist/\" \"tsconfig.tsbuildinfo\"",
    "test": "jest",
    "test-cov": "jest --coverage=true --coverageProvider=v8 --runInBand",
    "gen-client": "nswag openapi2tsclient /input:src/public/swagger.json /output:../sparpe-client/src/clients/server.generated.ts",
    "build-client": "cd ../client && npm install && npm run copy-to-server",
    "build-server": "tsc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/spotify-web-api-node": "^4.0.1",
    "@types/swagger-ui-express": "^4.1.2",
    "chokidar": "^3.4.0",
    "chokidar-cli": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "express": "^4.17.1",
    "rimraf": "^3.0.2",
    "spotify-web-api-node": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "tsoa": "^3.2.1"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.5.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-plugin-import": "^2.20.2",
    "nodemon": "^2.0.4",
    "typescript": "^3.9.6"
  }
}
